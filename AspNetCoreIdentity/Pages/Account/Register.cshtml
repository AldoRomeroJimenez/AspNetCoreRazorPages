@page
@model AspNetCoreIdentity.Pages.Account.RegisterModel
@{
    Layout = "_AccountLayout";
}
<div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input type="text" asp-for="Model.Name" class="form-control" />
                            <label asp-for="Model.Name">Nombre</label>
                            <span asp-validation-for="Model.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" asp-for="Model.LastName" class="form-control" />
                            <label asp-for="Model.Name">Apellido</label>
                            <span asp-validation-for="Model.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input type="text" asp-for="Model.Email" class="form-control" />
                            <label class="form-label" asp-for="Model.Email">Correo Electronico</label>
                            <span asp-validation-for="Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="tel" asp-for="Model.PhoneNumber" class="form-control" />
                            <label class="form-label" asp-for="Model.PhoneNumber">Telefono</label>
                            <span asp-validation-for="Model.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input type="password" asp-for="Model.Password" class="form-control" />
                            <label class="form-label" asp-for="Model.Password">Contraseña</label>
                            <span asp-validation-for="Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input type="password" asp-for="Model.ConfirmPassword" class="form-control" />
                            <label class="form-label" asp-for="Model.ConfirmPassword">Confirmar Contraseña</label>
                            <span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-0">
                    <button type="submit" class="btn btn-primary">Crear Cuenta</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a asp-page="/Account/Login">Ya tienes cuenta? Ve al acceso</a></div>
        </div>
    </div>
</div>