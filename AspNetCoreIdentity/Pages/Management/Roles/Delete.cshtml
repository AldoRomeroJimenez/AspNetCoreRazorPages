@page
@model AspNetCoreIdentity.Pages.Management.Roles.DeleteModel
@{
    ViewData["Title"] = "Eliminar Rol";
}
<h1>Eliminar Rol</h1>

<h3>Estas seguro de eliminar el rol?</h3>
<div class="card mb-4">
    <div class="card-body">
        <p>Nombre Rol : @Model.Model.RoleName</p>
        <p>Descripcion : @Model.Model.Description</p>
    </div>
</div>
<hr />
<h4>Usuarios Registrados En El Rol</h4>
<table id="datatablesSimple">
    <thead>
        <tr>
            <th>
                Usuarios
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</form>