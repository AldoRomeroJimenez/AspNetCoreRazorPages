@page
@model AspNetCoreIdentity.Pages.Management.Company.CreateModel

@{
    ViewData["Title"] = "Crear Empresa";
}
<div class="col-lg-10">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
            <h3 class="text-center font-weight-light my-4">Crear Empresa</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col-md-9">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.RazonSocial" id="rs" class="form-control" />
                            <label for="rs">Razon Social</label>
                            <span asp-validation-for="Empresa.RazonSocial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="Empresa.RFC" class="form-control" id="rfc" />
                            <label for="rfc">RFC</label>
                            <span asp-validation-for="Empresa.RFC" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Direccion" class="form-control" id="dir" />
                            <label for="dir">Direccion</label>
                            <span asp-validation-for="Empresa.Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-floating">
                            <input asp-for="Empresa.CodigoPostal" class="form-control" id="cp" />
                            <label for="cp">Codigo Postal</label>
                            <span asp-validation-for="Empresa.CodigoPostal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Estado" class="form-control" id="edo" />
                            <label for="edo">Estado</label>
                            <span asp-validation-for="Empresa.Estado" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="Empresa.Pais" class="form-control" id="pa" />
                            <label for="pa">Pais</label>
                            <span asp-validation-for="Empresa.Pais" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Email" class="form-control" id="Em" />
                            <label for="Em">Correo</label>
                            <span asp-validation-for="Empresa.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.FechaCreacion" class="form-control calendarFecha" id="fc" maxlength="10" />
                            <label for="fc">Fecha Creacion</label>
                            <span asp-validation-for="Empresa.FechaCreacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Moneda" class="form-control" id="mon" />
                            <label for="mon">Moneda</label>
                            <span asp-validation-for="Empresa.Moneda" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-5">
                        <div class="form-floating mb-3 mb-md-0">
                            <p>Cargar Certificado SAT</p>
                            <input asp-for="Cert" class="custom-file-input form-control" />
                            <label class="custom-file-label"></label>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-floating mb-3 mb-md-0">
                            <p>Cargar Key SAT</p>
                            <input asp-for="Key" class="custom-file-input form-control" />
                            <label class="custom-file-label"></label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-floating mb-3 mb-0">
                            <p>Clave Privada SAT</p>
                            <input type="password" asp-for="Empresa.ClavePrivadaSAT" class="form-control" id="cra" />
                            <span asp-validation-for="Empresa.ClavePrivadaSAT" class="text-danger"></span>                           
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <h4>Persona a Cargo</h4>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Curp" class="form-control" id="cr" />
                            <label for="cr">Curp</label>
                            <span asp-validation-for="Empresa.Curp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Nombre" class="form-control" id="nm" />
                            <label for="nm">Nombre</label>
                            <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.Apellido" class="form-control" id="Ape" />
                            <label for="Ape">Apellido</label>
                            <span asp-validation-for="Empresa.Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Empresa.FechaNacimiento" class="form-control calendarFecha" id="fNac" maxlength="10" />
                            <label for="FNac">Fecha Nacimiento</label>
                            <span asp-validation-for="Empresa.FechaNacimiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-0">
                    <button type="submit" class="btn btn-primary">Crear Empresa</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="align-content-lg-start">
                <a class="btn btn-dark" asp-page="Index">Regresar</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-input').html(fileName);
            })            
        });
        $(function () {
            $('.calendarFecha').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr"
            });
        });
    </script>
}
